<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradial"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/titletxtd"
            android:layout_width="match_parent"
            android:layout_height="69dp"
            android:gravity="center"
            android:text="QUOTES"
            android:textColor="@color/white"
            android:textSize="35sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/favourite_btn_dark"
            android:layout_width="31dp"
            android:layout_height="51dp"
            android:layout_marginTop="13dp"
            android:layout_marginEnd="6dp"
            android:layout_toStartOf="@+id/toogle_d"
            android:backgroundTint="@color/white"
            android:foregroundGravity="center"
            android:src="@drawable/ic_baseline_favorite_border_wht" />

        <ImageView
            android:id="@+id/toogle_d"
            android:layout_width="40dp"
            android:layout_height="69dp"
            android:layout_alignParentEnd="true"
            android:backgroundTint="@color/white"
            android:src="@drawable/ic_night" />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ListView
            android:id="@+id/list_view_d"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            tools:listitem="@layout/list_item_dark">

        </ListView>

    </LinearLayout>


</LinearLayout>